<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
                android:id="@+id/img_barcodeBorder"
                android:layout_width="0dp"
                android:layout_height="212dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="194dp"
                android:layout_marginEnd="22dp"
                android:elevation="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/zxing_barcode_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/img_barcodeBorder"
                app:layout_constraintEnd_toEndOf="@id/img_barcodeBorder"
                app:layout_constraintStart_toStartOf="@id/img_barcodeBorder"
                app:layout_constraintTop_toTopOf="@id/img_barcodeBorder"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

