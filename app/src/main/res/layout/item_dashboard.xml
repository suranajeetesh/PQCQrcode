<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <data class="ItemDashboardBinding">

            <variable
                    name="mData"
                    type="com.pqc.qr.data.remote.model.local.DashboardList" />
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dashboard"
            android:paddingVertical="14dp"
            android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_dashboard_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:duplicateParentState="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/url" />

        <TextView
                android:id="@+id/txt_dashboard_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAlignment="center"
                android:ellipsize="end"
                android:elegantTextHeight="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="@tools:sample/lorem/random"
                app:layout_constrainedWidth="true"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="24dp"
                android:duplicateParentState="true"
                app:layout_constraintTop_toBottomOf="@id/img_dashboard_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>